<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" styleClass="tx-root" stylesheets="@../css/transactions_list.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dp.notary.blockchain.ui.TransactionsListController">

    <!-- FILTER ROW (one line above the table) -->
    <VBox spacing="6" styleClass="tx-filterbar">

        <!-- FILTER TITLE -->
        <Label styleClass="tx-filter-title" text="Filter" />

        <!-- FILTER FIELDS ROW -->
        <HBox alignment="CENTER_LEFT" spacing="10">

            <VBox spacing="2">
                <Label styleClass="tx-filter-label" text="Created by" />
                <TextField fx:id="filterCreatedBy" prefWidth="160" />
            </VBox>

            <VBox spacing="2">
                <Label styleClass="tx-filter-label" text="Initiator" />
                <TextField fx:id="filterInitiator" prefWidth="160" />
            </VBox>

            <VBox spacing="2">
                <Label styleClass="tx-filter-label" text="Target" />
                <TextField fx:id="filterTarget" prefWidth="160" />
            </VBox>

            <VBox spacing="2">
                <Label styleClass="tx-filter-label" text="Type" />
                <ComboBox fx:id="filterType" prefWidth="150" />
            </VBox>

            <!-- Status (only MY_SUBMITTED) -->
<!--            <VBox fx:id="statusFilterBox" managed="false" spacing="2" visible="false">-->
<!--                <Label styleClass="tx-filter-label" text="Status" />-->
<!--                <ComboBox fx:id="filterStatus" prefWidth="150" />-->
<!--            </VBox>-->

            <!-- CLEAR BUTTON aligned with fields -->
            <VBox spacing="2">
                <Label styleClass="tx-filter-label" text=" " />

                <Button onAction="#onClearFilters" prefHeight="25.0" prefWidth="72.0" styleClass="tx-clear-btn" text="Clear" />
            </VBox>
            <VBox spacing="2">
                <Label styleClass="tx-filter-label" text=" " />

                <Button onAction="#onApplyFilters" prefHeight="25.0" prefWidth="72.0" styleClass="tx-clear-btn" text="Apply" />
            </VBox>

        </HBox>
    </VBox>

    <Separator />

    <!-- TABLE + DETAILS -->
    <HBox spacing="14" VBox.vgrow="ALWAYS">

        <VBox spacing="10" HBox.hgrow="ALWAYS">

<!--            <HBox fx:id="paginationBox" alignment="BOTTOM_RIGHT" spacing="6" padding="10">-->
<!--                <Label text="here" />-->
<!--            </HBox>-->

            <HBox fx:id="paginationTop" alignment="CENTER_RIGHT" spacing="6">
                <Label text="here" />
            </HBox>

            <!-- TABLE -->
            <TableView fx:id="table" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colTime" prefWidth="140" text="Time" />
<!--                    <TableColumn fx:id="colId" prefWidth="80" text="ID" />-->

                    <!-- only visible in MY_SUBMITTED mode -->
<!--                    <TableColumn fx:id="colStatus" prefWidth="120" text="Status" />-->

                    <TableColumn fx:id="colType" prefWidth="120" text="Type" />
                    <TableColumn fx:id="colCreatedBy" prefWidth="160" text="Created by" />
                    <TableColumn fx:id="colInitiator" prefWidth="160" text="Initiator" />
                    <TableColumn fx:id="colTarget" prefWidth="160" text="Target" />
                    <TableColumn fx:id="colAmount" prefWidth="120" text="Amount" />
                </columns>
            </TableView>

            <HBox fx:id="paginationBottom" alignment="BOTTOM_RIGHT" spacing="6">
                <Label text="here" />
            </HBox>
        </VBox>



        <!-- DETAILS -->
        <VBox prefWidth="320" spacing="10" styleClass="tx-details">
            <Label styleClass="tx-card-title" text="Details" />
            <Separator />

            <Label fx:id="detailsHint" styleClass="tx-hint" text="Select a transaction from the table." />

            <VBox spacing="8">
<!--                <Label styleClass="tx-field-label" text="ID" />-->
<!--                <Label fx:id="detailsId" styleClass="tx-field-value" text="—" />-->

                <Label styleClass="tx-field-label" text="Time" />
                <Label fx:id="detailsTime" styleClass="tx-field-value" text="—" />

<!--                <Label fx:id="detailsStatusLabel" managed="false" styleClass="tx-field-label" text="Status" visible="false" />-->
<!--                <Label fx:id="detailsStatus" managed="false" styleClass="tx-field-value" text="—" visible="false" />-->

                <Label styleClass="tx-field-label" text="Type" />
                <Label fx:id="detailsType" styleClass="tx-field-value" text="—" />

                <Label styleClass="tx-field-label" text="Created by" />
                <Label fx:id="detailsCreatedBy" styleClass="tx-field-value" text="—" />

                <Label styleClass="tx-field-label" text="Initiator" />
                <Label fx:id="detailsInitiator" styleClass="tx-field-value" text="—" />

                <Label styleClass="tx-field-label" text="Target" />
                <Label fx:id="detailsTarget" styleClass="tx-field-value" text="—" />

                <Label styleClass="tx-field-label" text="Amount" />
                <Label fx:id="detailsAmount" styleClass="tx-field-value" text="—" />
            </VBox>

            <Separator />

            <!-- ACTIONS -->
            <VBox spacing="8">
                <HBox alignment="CENTER_LEFT">
                    <Button fx:id="deleteBtn" onAction="#onDelete" text="Delete" />

                    <Region HBox.hgrow="ALWAYS" />

                    <Button fx:id="editBtn" onAction="#onEdit" text="Edit" />
                </HBox>

                <HBox alignment="CENTER_LEFT">
                    <Button fx:id="declineBtn" onAction="#onDecline" text="Decline" />

                    <Region HBox.hgrow="ALWAYS" />

                    <Button fx:id="approveBtn" onAction="#onApprove" text="Approve" />
                </HBox>

<!--                <VBox fx:id="declineBox" spacing="6" visible="false" managed="false">-->
<!--                    <Label text="Enter decline comment:"/>-->
<!--                    <TextArea fx:id="declineCommentArea" prefRowCount="3"/>-->
<!--                    <Button text="OK" onAction="#onConfirmDecline"/>-->
<!--                </VBox>-->

                <Button fx:id="resubmitBtn" onAction="#onResubmit" text="Send again" />
            </VBox>

            <Region VBox.vgrow="ALWAYS" />
        </VBox>
    </HBox>

</VBox>
