<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox
        alignment="CENTER"
        prefHeight="441.0"
        prefWidth="423.0"
        spacing="14"
        stylesheets="@../css/auth.css"
        styleClass="auth-root"
        xmlns="http://javafx.com/javafx/23.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.dp.notary.blockchain.ui.LoginController">

    <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" />

    <Label text="Notary Blockchain" styleClass="auth-title" />
    <Label text="Sign in to continue" styleClass="auth-subtitle" />

    <VBox maxWidth="320" spacing="10">
        <VBox>
            <Label text="Provide your username:" styleClass="field-label" />
            <TextField fx:id="usernameField" promptText="Username" />
        </VBox>

        <VBox>
            <Label text="Provide your password:" styleClass="field-label" />
            <PasswordField fx:id="passwordField" promptText="Password" />
        </VBox>
    </VBox>

    <Label fx:id="errorLabel" visible="false" styleClass="auth-error" />

    <Button text="Log in" onAction="#onLogin" styleClass="button-login" />

    <HBox alignment="CENTER" spacing="6">
        <Label text="No account?" styleClass="muted-label" />
        <Hyperlink text="Create one" onAction="#onGoToSignup" />
    </HBox>

</VBox>
